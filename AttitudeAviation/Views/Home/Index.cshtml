@{
    ViewData["Title"] = "Home Page";
}

<form runat="server">
    <div>
        <br />
        <input runat="server" align="right" type="text" id="searchtxt" value="Search this site" />
        <input runat="server" align="right" type="submit" id="searchsub" value="Search" />
    </div>
    <div>
        <br />
        Username: <input runat="server" type="text" id="user" /> Password: <input runat="server" type="password" id="pswd" />
        <input runat="server" type="submit" id="submit" />
    </div>
</form>

<hr />
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Schedule to Rent Aircraft
                    <a class="btn btn-default" href="">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Schdedule for Aircraft Maintenance
                    <a class="btn btn-default" href="">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.svg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Schedule for Flight Lessons
                    <a class="btn btn-default" href="">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
</div>


